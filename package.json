{
  "name": "twicode",
  "displayName": "twicode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "content_security_policy": "default-src 'none'; style-src vscode-resource: 'unsafe-inline'; script-src vscode-resource: 'unsafe-inline' 'unsafe-eval' vscode-webview-resource:; media-src vscode-resource:; img-src vscode-resource: data:; connect-src vscode-resource: http://localhost:3000",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "explorer": [
        {
          "id": "scheduledTweets",
          "title": "Scheduled Tweets",
          "icon": "resources/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "scheduledTweets",
          "title": "Scheduled Tweets",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "scheduledTweets": [
        {
          "id": "scheduledTweets",
          "name": "View Tweets",
          "webview": {
            "retainContextWhenHidden": true,
            "enableFindWidget": true,
            "localResourceRoots": [
              "${webviewRootUri}"
            ],
            "webview-src": "./src/webviews/scheduledTweets/tweets.html"
          }
        }
      ]
    },
    "commands": [
      {
        "command": "twicode.helloWorld",
        "title": "hello"
      },
      {
        "command": "twicode.showScheduledTweets",
        "title": "Show Scheduled Tweets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/pg": "^8.6.6",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "babel-loader": "^9.1.2",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "pg-native": "^3.0.1",
    "sqlite3": "^5.1.6"
  }
}
